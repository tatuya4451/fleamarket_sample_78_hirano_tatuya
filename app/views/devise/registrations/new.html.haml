.account
  .account__header
    .account__header__logo
      = image_tag 'logo/logo.png',class:'account__header--logo', alt:"FURIMA", width:"200px"
  .account__main
    .account__main__area
      %h2.single 会員情報入力
      .account__main__area__form
        .account__main__area__form__input
          = form_for(@user, url: user_registration_path) do |f|
            = render "devise/shared/error_messages", resource: @user
            .form-group
              = f.label :ニックネーム
              %span.required 必須
              %br/
              = f.text_field :nickname, autofocus: true, class: 'input-type', placeholder: ' 全角で入力してください'

            .form-group
              = f.label :email
              %span.required
                必須
              %br/
              = f.email_field :email, autocomplete: "email", class: 'input-type', placeholder: ' PC 携帯 どちらでも可'

            .form-group
              = f.label :password
              %span.required
                必須
              %br/
              = f.password_field :password, autocomplete: "new-password", class: 'input-type' , placeholder: ' 7桁以上の半角英数字'
              %p.text ※英字と数字の両方を含めて設定してください
            
            .form-group
              = f.label :password_confirmation
              %span.required
                必須
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-type' , placeholder: ' パスワード確認入力'


            .form-group
              %h2 本人確認
              %p.note 安心・安全にご利用いただくために、お客様の本人情報の登録にご協力ください。他のお客様に公開されることはありません。

            .form-group
              =f.label :お名前（全角）
              %span.required
                必須
              %br/
              = f.text_field :last_name, placeholder: "例）山田", class: "input-type"
              = f.text_field :first_name,  placeholder: "例）太郎", class: "input-type"

            .form-group
              = f.label :お名前カナ（全角）
              %span.required
                必須
              %br/
              .form-name
              =f.text_field :last_name_kana, placeholder: "例）ヤマダ", class: "input-type"
              =f.text_field :first_name_kana, placeholder: "例）タロウ", class: "input-type"

            .form-group
              = f.label :生年月日
              %span.required
                必須
              %br/
              = f.text_field :birthday, class: 'input-type', placeholder: '例）20000101'
                
            %p.text ※本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
            .form-btn
              = f.submit :"次へ", class: "btn",  id:"btn"
            %p.form-text
              = link_to "#" do
                本人情報の登録について
                %i.fas.fa-angle-right.fa-lg

            %p.recaptcha
              This site is protected by reCAPTCHA and the %Google
              = link_to "#" do
                Privacy Policy
              and
              = link_to "#" do
                Teams of Service
              apply.
  .account__footer
    .Notice
      %ul
        %li
          = link_to "#",class:"link" do
            プライバシーポリシー
        %li
          = link_to "#",class:"link" do
            FURIMA利用規約
        %li
          = link_to "#",class:"link" do
            特定商取引に関する表記
    .Logo
      = link_to "#",class:"link" do
        = image_tag "logo/logo-white.png",class:'account__header__Logo', alt:"FURIMA", width:"200px"
      %p.CompanyName
        ©︎ FURIMA, Inc.
